<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="372dp" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="372dp" >

            <LinearLayout
                android:layout_width="304dp"
                android:layout_height="326dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/propTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="22dp"
                    android:paddingBottom="5dp"
                    android:text="@string/land" />

                <Spinner
                    android:id="@+id/landTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="19dp"
                    android:paddingBottom="5dp"
                    android:prompt="@color/White" />

                <TextView
                    android:id="@+id/plotTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="17dp"
                    android:paddingBottom="10dp"
                    android:text="@string/type_contract" />

                <Spinner
                    android:id="@+id/contractTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="17dp"
                    android:paddingBottom="5dp" />

                <EditText
                    android:id="@+id/amountEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="31dp"
                    android:ems="10"
                    android:hint="@string/max"
                    android:inputType="number"
                    android:paddingBottom="5dp" />

                <EditText
                    android:id="@+id/cityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:hint="@string/city_name"
                    android:paddingBottom="5dp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/Black"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <Button
            android:id="@+id/searchPlot"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="@string/search" />
    </FrameLayout>

</RelativeLayout>